                HorizontalOptions="CenterAndExpand" />
            <ScrollView Grid.ColumnSpan="20" Grid.Row="1" Grid.RowSpan="18" BackgroundColor="LightGray">
                <Label HorizontalTextAlignment="Start" FontSize="16" HorizontalOptions="CenterAndExpand"></Label>
            </ScrollView>
            <Button Grid.Column="6" Grid.ColumnSpan="8" Grid.Row="18" Grid.RowSpan="2"   
                    Text="Accept" BackgroundColor="Gray" FontSize="25" FontFamily="Time New Roman" Opacity="50" Clicked="Button_ClickedAsync"/>

        </Grid>
