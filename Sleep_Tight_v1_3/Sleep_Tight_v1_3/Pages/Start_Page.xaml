<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sleep_Tight_v1_3.Start_Page"
            Title="Sleep Tight v1.3" NavigationPage.HasNavigationBar="False">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Main" >
        <StackLayout >
        <Entry x:Name="Time_Sleep" Text="00.00" Keyboard="Numeric" />
            <Label x:Name="plm"/>
            <Slider x:Name="ChHour" Maximum="23" Minimum="0"  AutomationId="1" ValueChanged="ChHour_ValueChanged" Value="0" />
            <Label x:Name="lemn"/>
            <Slider x:Name="ChMinute" Maximum="59" Minimum="0" AutomationId="1" ValueChanged="ChMinute_ValueChanged" Value="0" />
        </StackLayout>

    </ContentPage>
    <ContentPage Title="Stats" >
        
    </ContentPage>
</TabbedPage>