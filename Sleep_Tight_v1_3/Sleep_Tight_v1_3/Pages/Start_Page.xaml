<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sleep_Tight_v1_3.Start_Page"
            Title="Sleep Tight v1.3" NavigationPage.HasNavigationBar="False" Style="{DynamicResource backgroundTabbedStyle}" >
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Main"  >
        <ScrollView>
        <StackLayout >
                <TimePicker x:Name="TimePickerGoSleep" Margin="50,0,50,0" Style="{DynamicResource backgroundTimePickerStyle}" PropertyChanged="TimePickerGoSleep_PropertyChanged" VerticalOptions="Center" HeightRequest="100"/>
                <Label x:Name="test" Style="{DynamicResource labelStyle}"/>
            </StackLayout>
        </ScrollView>

    </ContentPage>
    <ContentPage Title="Stats" Style="{DynamicResource backgroundStyle}" >
        
    </ContentPage>
</TabbedPage>